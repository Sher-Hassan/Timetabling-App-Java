<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.timetablejava.AddClass">
    <GridPane layoutX="14.0" layoutY="14.0" hgap="10" vgap="10">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <Label text="Student:"/>
        <ComboBox fx:id="studentComboBox" GridPane.columnIndex="1"/>

        <Label text="Teacher:" GridPane.rowIndex="1"/>
        <ComboBox fx:id="teacherComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Room:" GridPane.rowIndex="2"/>
        <ComboBox fx:id="roomComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Course:" GridPane.rowIndex="3"/>
        <ComboBox fx:id="courseComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Day:" GridPane.rowIndex="4"/>
        <TextField fx:id="dayField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="Start Time:" GridPane.rowIndex="5"/>
        <TextField fx:id="startTimeField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <Label text="End Time:" GridPane.rowIndex="6"/>
        <TextField fx:id="endTimeField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        <Label text="Section:" GridPane.rowIndex="7"/>
        <TextField fx:id="sectionField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

        <Button text="Add Class" onAction="#handleAddClass" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
    </GridPane>
</AnchorPane>
